<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="GD_UI_Selenium_Tests">

    <test name="LoginTests">
        <groups>
            <run>
                <exclude name="brokenTest"/>
            </run>
        </groups>
        <packages>
            <package name="com.gooddata.qa.graphene.login.*"/>
        </packages>
    </test>

    <test name="GoodSalesDashboardTest">
        <groups>
            <run>
                <exclude name="brokenTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.gooddata.qa.graphene.dashboards.GoodSalesDashboardTest"/>
        </classes>
    </test>

    <test name="GoodSalesReportsTest">
        <groups>
            <run>
                <exclude name="brokenTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.gooddata.qa.graphene.reports.GoodSalesReportsTest"/>
        </classes>
    </test>

    <test name="GoodSalesEmailSchedulesTest">
        <groups>
            <run>
                <exclude name="brokenTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.gooddata.qa.graphene.schedules.GoodSalesEmailSchedulesTest"/>
        </classes>
    </test>

</suite>
